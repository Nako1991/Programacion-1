//resultado por pantalla.
Algoritmo areaCirculo
	Definir radio, area Como Real;
	Escribir "ingrese el valor del radio";
	Leer radio;
	area = pi * radio ^ 2;
	Escribir "el area del circulo es de ", area;
FinAlgoritmo
